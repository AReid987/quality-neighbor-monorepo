{
  "$schema": "https://turborepo.com/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "env": ["NODE_MODULES_CACHE", "NPM_RC_ARGS"]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}